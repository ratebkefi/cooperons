              <a class="btn_contact" href="{{path('landing_contract', {'tkn':token, 'isMember' : isMember})}}">
                  <i class="fa fa-home"></i>
                  <span>Accueil</span>
              </a>
          </div>
      </div>
  </div>
  <!-- /FAQ -->

  <div class="wrapper white">

      <header class="header clear " role="banner">
          <!-- wrapper -->
          <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12">
                  <!-- logo -->
                  <div class="logo">
                      <a href="#">
                          <img src="{{ asset('bundles/Edtapp/img/marketing_new/logo.png')}}"  alt="Logo" class="logo-img">
                      </a>
